import mysql.connector
from tabulate import tabulate
import sys

# Connect to MySQL
try:
    mySQL = mysql.connector.connect(
        host="localhost",
        user="root",
        passwd="44399",
        database="about"
    )
except mysql.connector.Error as err:
    print(f"Connection failed: {err}")
    sys.exit()

# Insert Function
def insert(name, age, city):
    try:
        MC = mySQL.cursor()
        sql = "INSERT INTO Details(name, age, city) VALUES (%s, %s, %s)"
        MC.execute(sql, (name, age, city))
        mySQL.commit()
        print("‚úÖ Data inserted successfully.\n")
    except mysql.connector.Error as err:
        print(f"‚ùå Insert Error: {err}\n")

# Select Function
def select():
    try:
        MC = mySQL.cursor()
        MC.execute("SELECT * FROM Details")
        result = MC.fetchall()
        if result:
            print(tabulate(result, headers=["ID", "Name", "Age", "City"], tablefmt="grid"))
        else:
            print("‚ÑπÔ∏è No records found.\n")
    except mysql.connector.Error as err:
        print(f"‚ùå Select Error: {err}\n")

# Update Function
def update(id, name, age, city):
    try:
        MC = mySQL.cursor()
        sql = "UPDATE Details SET name=%s, age=%s, city=%s WHERE id=%s"
        MC.execute(sql, (name, age, city, id))
        mySQL.commit()
        if MC.rowcount:
            print("‚úÖ Record updated successfully.\n")
        else:
            print("‚ö†Ô∏è No record found with that ID.\n")
    except mysql.connector.Error as err:
        print(f"‚ùå Update Error: {err}\n")

# Delete Function
def delete(id):
    try:
        MC = mySQL.cursor()
        MC.execute("DELETE FROM Details WHERE id=%s", (id,))
        mySQL.commit()
        if MC.rowcount:
            print("‚úÖ Record deleted successfully.\n")
        else:
            print("‚ö†Ô∏è No record found with that ID.\n")
    except mysql.connector.Error as err:
        print(f"‚ùå Delete Error: {err}\n")

# Exit Function
def exit_program():
    print("üëã Exiting program. Goodbye!")
    mySQL.close()
    sys.exit()

# Menu Loop
while True:
    print("\n=== MySQL CRUD Menu ===")
    print("1: Insert Data")
    print("2: View All Data")
    print("3: Update Data")
    print("4: Delete Data")
    print("5: Exit")

    try:
        choice = int(input("Enter your choice (1-5): "))
    except ValueError:
        print("‚ùå Invalid input. Please enter a number between 1 and 5.\n")
        continue

    if choice == 1:
        name = input("Enter Name: ").strip()
        city = input("Enter City: ").strip()
        try:
            age = int(input("Enter Age: "))
        except ValueError:
            print("‚ùå Age must be a number.\n")
            continue
        if not name or not city:
            print("‚ùå Name and City cannot be empty.\n")
            continue
        insert(name, age, city)

    elif choice == 2:
        select()

    elif choice == 3:
        try:
            id = int(input("Enter ID to update: "))
            name = input("Enter New Name: ").strip()
            age = int(input("Enter New Age: "))
            city = input("Enter New City: ").strip()
        except ValueError:
            print("‚ùå Invalid input. ID and Age must be numbers.\n")
            continue
        update(id, name, age, city)

    elif choice == 4:
        try:
            id = int(input("Enter ID to delete: "))
        except ValueError:
            print("‚ùå Invalid ID. Please enter a number.\n")
            continue
        delete(id)

    elif choice == 5:
        exit_program()

    else:
        print("‚ùå Invalid choice. Please try again.\n")

